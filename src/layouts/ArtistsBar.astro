---
import ArtistRound from "../components/ArtistRound.astro";
import { Artist, ArtistDetailed } from "../Types";

export interface Props {
	frontmatter: {
        artists: Artist[]
    }
}

const artists = await Astro.glob<ArtistDetailed>("../content/artists/**.mdx").then(
    artists => artists.map(artists => artists.frontmatter)
);

// const { frontmatter: {artists} } = Astro.props;
---
<ul>
    {artists.map(artist => <li><ArtistRound artist={artist}></ArtistRound></li>)}
</ul>
<style>
    ul {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        row-gap: 1.5em;
    }

    li {
        margin-right: 1.5em;
    }

    @media screen and (max-width: 800px) {
        ul {
            flex-wrap: nowrap;
            overflow-x: hidden;
            padding-left: -10em;
            width: fit-content;
        }

        li {
            
        }
    }
</style>