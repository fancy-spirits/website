---
import { ArtistDetailed } from '../Types';

export interface Props {
	artist: ArtistDetailed;
}

const { artist } = Astro.props;

const backgroundColor = artist.backgroundColor;
---


<style define:vars={{backgroundColor}}>

    .withBackground {
        background-color: var(--backgroundColor);
    }

    img {
        max-width: 5em;
        max-height: 5em;
        aspect-ratio: 1;
        border-radius: 50%;
        cursor: pointer;
        filter: saturate(50%);
        transition: 0.4s;
        border: solid 0.75px #dddddd;
    }

    a {
        transform: translateY(0);
        transition: 0.5s;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    a em {
        width: max-content;
    }

    @media screen and (max-width: 800px) {
        img {
            max-width: 3em;
            max-height: 3em;
            aspect-ratio: 1;
        }

        div {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: auto 10em;
        }

        a:hover {
            transform: translateY(0em) !important;
        }

        a:hover > em {
            transform: scale(1) !important;
        }
    }

    a:hover > img {
        filter: saturate(120%);
        border: solid 3px #222222;
        box-shadow: 0.25em 0.15em 0.5em rgba(0, 0, 0, 0.15);
    }

    a:hover {
        transform: translateY(-0.75em);
    }

    div {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: auto 10em;
    }

    em {
        text-align: center;
        display: block;
        margin-top: 0.5em;
        transition: 0.5s;
    }

    a:hover > em {
        transform: scale(1.05);
    }

    @media (prefers-color-scheme: dark) {

        img {
            border: solid 0.75px #222222;
        }

        a:hover > img {
            border: solid 2px #eeeeee;
        }
    }
</style>
<div>
    <a href={`/artists#${artist.id}-artist`}>
        <img src={artist.imageSrc} alt={artist.name} class:list={[{withBackground: backgroundColor !== undefined}]}>
        <em>{artist.name}</em>
    </a>
</div>